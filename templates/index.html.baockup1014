<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <title>{{ config.title }}</title>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: #1a1a1a;
            color: #e0e0e0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        #spotlight {
            text-align: center;
            padding: 2rem;
        }
        
        #home-title {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #ffffff;
        }
        
        #home-subtitle {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            color: #b0b0b0;
        }
        
        #home-social {
            margin-bottom: 2rem;
        }
        
        #home-social a {
            display: inline-block;
            margin: 0 0.5rem;
            color: #e0e0e0;
            text-decoration: none;
            transition: color 0.3s;
        }
        
        #home-social a:hover {
            color: #ffffff;
        }
        
        .feather {
            width: 24px;
            height: 24px;
        }
        
        #home-nav {
            margin-bottom: 3rem;
        }
        
        #home-nav a {
            color: #e0e0e0;
            text-decoration: none;
            margin: 0 1rem;
            font-size: 1.5rem;
            transition: color 0.3s;
        }
        
        #home-nav a:hover {
            color: #ffffff;
        }
        
        #home-footer {
            color: #888;
            font-size: 0.9rem;
        }
        
        #home-footer a {
            color: #aaa;
            text-decoration: none;
        }
        
        #home-footer a:hover {
            color: #ccc;
        }
        
        /* 响应式设计 */
        @media (max-width: 768px) {
            #home-title {
                font-size: 2rem;
            }
            
            #home-subtitle {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div id="spotlight">
        <div id="home-center">
            <h1 id="home-title">{{ config.title }}</h1>
            <p id="home-subtitle">{{ config.description }}</p>
            
            <div id="home-social">
                <!-- 社交图标会通过JavaScript动态添加 -->
            </div>
            
            <nav id="home-nav">
                <a href="/posts">记录</a>
            </nav>
            <nav id="home-nav">
                <a href="/about">关于</a>
            </nav>
               
        </div>
        
        <div id="home-footer">
            <p>&copy; {{ now() | date(format="%Y") }} {{ config.extra.author | default(value=config.title) }}</p>
        </div>
        <p>
            <a href="https://icp.gov.moe/?keyword=20250869" target="_blank">
			萌ICP备20250869号
			</a>
        </p>

    </div>

    <script>
        // 动态添加社交图标 - 确保使用 HTTPS 链接
        const socialLinks = [
            {
                url: "https://github.com/{{ config.extra.github }}",
                title: "github",
                icon: `<svg xmlns="http://www.w3.org/2000/svg" class="feather" width="24" height="24" viewBox="0 0 1024 1024" fill="currentColor">
                    <path d="M950.857143 512q0 143.428571-83.714286 258T650.857143 928.571429q-15.428571 2.857143-22.571429-4t-7.142857-17.142858v-120.571428q0-55.428571-29.714286-81.142857 32.571429-3.428571 58.571429-10.285715t53.714286-22.285714 46.285714-38 30.285714-60T792 489.142857q0-69.142857-45.142857-117.714286 21.142857-52-4.571429-116.571428-16-5.142857-46.285714 6.285714t-52.571429 25.142857l-21.714285 13.714286q-53.142857-14.857143-109.714286-14.857143t-109.714286 14.857143q-9.142857-6.285714-24.285714-15.428571T330.285714 262.571429 281.142857 254.857143q-25.142857 64.571429-4 116.571428-45.142857 48.571429-45.142857 117.714286 0 48.571429 11.714286 85.714286t30 60 46 38.285714 53.714285 22.285714 58.571429 10.285715q-22.857143 20.571429-28 58.857143-12 5.714286-25.714286 8.571428t-32.571428 2.857143-37.428572-12.285714T276.571429 728q-10.857143-18.285714-27.714286-29.714286t-28.285714-13.714285l-11.428572-1.714286q-12 0-16.571428 2.571428t-2.857143 6.571429 5.142857 8 7.428571 6.857143l4 2.857143q12.571429 5.714286 24.857143 21.714285t18 29.142858l5.714286 13.142857q7.428571 21.714286 25.142857 35.142857t38.285714 17.142857 39.714286 4 31.714286-2l13.142857-2.285714q0 21.714286 0.285714 50.857143t0.285714 30.857142q0 10.285714-7.428571 17.142858t-22.857143 4q-132.571429-44-216.285714-158.571429T73.142857 512q0-119.428571 58.857143-220.285714T291.714286 132 512 73.142857t220.285714 58.857143T892 291.714286 950.857143 512z"></path>
                </svg>`
            },
            {
                url: "mailto:{{ config.extra.email }}",
                title: "email",
                icon: `<svg xmlns="http://www.w3.org/2000/svg" class="feather" width="24" height="24" viewBox="0 0 1024 1024" fill="currentColor">
                    <path d="M170.666667 128l682.666667 0q52.992 0 90.496 37.504t37.504 90.496l0 512q0 52.992-37.504 90.496t-90.496 37.504l-682.666667 0q-52.992 0-90.496-37.504t-37.504-90.496l0-512q0-52.992 37.504-90.496t90.496-37.504zM896 768l0-466.005333-357.333333 285.994667q-11.349333 9.344-26.666667 9.344t-26.666667-9.344l-357.333333-285.994667 0 466.005333q0 17.664 12.501333 30.165333t30.165333 12.501333l682.666667 0q17.664 0 30.165333-12.501333t12.501333-30.165333zM853.333333 213.333333l-682.666667 0q-6.314667 0-13.994667 2.346667l355.328 284.330667 355.328-284.330667q-7.68-2.346667-13.994667-2.346667z"></path>
                </svg>`
            }
        ];
        
        const socialContainer = document.getElementById('home-social');
        socialLinks.forEach(link => {
            // 替换模板变量
            let finalUrl = link.url;
            finalUrl = finalUrl.replace('{{ config.extra.github }}', '{{ config.extra.github }}');
            finalUrl = finalUrl.replace('{{ config.extra.email }}', '{{ config.extra.email }}');
            
            const a = document.createElement('a');
            a.href = finalUrl;
            a.target = '_blank';
            a.rel = 'noopener';
            a.title = link.title;
            a.innerHTML = link.icon;
            socialContainer.appendChild(a);
        });
    </script>
</body>
</html>